{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "prisma": {
    "schema": "./infrastructure/database/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "node --loader ts-node/esm interfaces/server.ts",
    "start": "node dist/interfaces/server.js",
    "build": "tsc",
    "prisma:generate": "npx prisma generate --schema=./infrastructure/database/prisma/schema.prisma",
    "prisma:format": "npx prisma format --schema=./infrastructure/database/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./infrastructure/database/prisma/schema.prisma",
    "prisma:clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules/.prisma,node_modules/@prisma/client -ErrorAction SilentlyContinue\"",
    "prisma:fix": "npm run prisma:clean && npm run prisma:generate",
    "schema": "./infrastructure/database/prisma/schema.prisma",
    "migrate:both": "npm run migrate:prod && npm run migrate:test",
    "migrate:prod": "powershell -Command \"$env:DATABASE_URL='postgresql://postgres:5746@localhost:5432/social_app'; npx prisma migrate dev --schema=./infrastructure/database/prisma/schema.prisma\"",
    "migrate:test": "powershell -Command \"$env:DATABASE_URL='postgresql://postgres:5746@localhost:5432/dodgerjsocial_test'; npx prisma migrate deploy --schema=./infrastructure/database/prisma/schema.prisma\"",
    "migrate:reset": "powershell -Command \"$env:DATABASE_URL='postgresql://postgres:5746@localhost:5432/social_app'; npx prisma migrate reset --force --skip-seed --schema=./infrastructure/database/prisma/schema.prisma\"",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "postinstall": "npm run prisma:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.840.0",
    "@prisma/client": "^6.12.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^2.2.1",
    "node-cron": "^3.0.3",
    "nodemon": "^3.0.3",
    "socket.io": "^4.8.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.15.17",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.12.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
